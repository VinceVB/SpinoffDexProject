#:kivy 1.11.1
#:import NoTransition kivy.uix.screenmanager.NoTransition
#:import v variables
<Button>:
    font_name: 'Rounded_Elegance.ttf'
<Label>:
    font_name: 'Rounded_Elegance.ttf'
<Screen>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<Separator_x@Widget>
    size_hint: None, None
    size: self.parent.width, dp(2)
    canvas:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

<Separator_y@Widget>
    size_hint: None, None
    size: dp(2), self.parent.height
    canvas:
        Color:
            rgba: 1, 1, 1, 0.2
        Rectangle:
            size: self.size
            pos: self.pos

# Define your background color Template
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    # Default the background color for this label
    # to r 0, g 0, b 0, a 0

<TintedLabel@Label>
    canvas:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos

<DexEntry>
    cols:2
    on_press:
        app.root.dex_list_scroller.previous_y = app.root.dex_list_scroller.scroll_y  # Remember position in scroller to return to later
        app.root.dex_page_main.number = int(self.page[3:])
        app.root.manager.current = 'dex_page_main'

<MD_MainBotNav@Widget>:
    size_hint: None, None
    size: self.parent.width, self.parent.height * 0.05
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: self.parent.width, self.parent.height
        Button:
            text: 'Dex'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.manager.current = 'md_main_dex'
        Button:
            text: 'Locations'
            font_size: '14sp'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.dex_list_scroller.previous_y = app.root.dex_list_scroller.scroll_y
                app.root.manager.current = 'md_main_locations'
        Button:
            text: 'Items'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.dex_list_scroller.previous_y = app.root.dex_list_scroller.scroll_y
                app.root.manager.current = 'md_main_items'
        Button:
            text: 'Moves'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.dex_list_scroller.previous_y = app.root.dex_list_scroller.scroll_y
                app.root.manager.current = 'md_main_moves'

<MD_DexBotNav@Widget>
    size_hint: None, None
    size: self.parent.width, self.parent.height * 0.05

    # Bottom selection
    BoxLayout:
        orientation: 'horizontal'
        size_hint: None, None
        size: self.parent.width, self.parent.height
        Button:
            text: 'General'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.manager.current = 'dex_page_main'

        Button:
            text: 'Moves'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.manager.current = 'dex_page_moves'
        Button:
            text: 'Stats'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.manager.current = 'dex_page_stats'
        Button:
            text: 'Quotes'
            size_hint: None, None
            size: self.parent.width/4, self.parent.height
            on_release:
                app.root.manager.current = 'dex_page_quotes'

<SpinoffDex>
    manager: manager
    dex_page_main: dex_page_main
    md_dex_grid: md_dex_grid
    general_image: general_image
    md_abilities: md_abilities
    md_ability1: md_ability1
    md_ability2: md_ability2
    md_ability_sep: md_ability_sep
    md_joined: md_joined
    md_body_size: md_body_size
    md_location: md_location
    md_friend_area: md_friend_area
    md_get_rate: md_get_rate
    md_get_rate2: md_get_rate2
    md_gummis_box: md_gummis_box
    md_evo_box: md_evo_box
    md_moves_names: md_moves_names
    md_moves_levels: md_moves_levels
    md_moves_separators: md_moves_separators
    md_tm_nrs: md_tm_nrs
    md_tm_names: md_tm_names
    md_tm_separators: md_tm_separators
    general_type1: general_type1
    general_type2: general_type2
    type_box: type_box
    dex_list_scroller: dex_list_scroller
    dex_searchbar: dex_searchbar
    dex_base_stats: dex_base_stats
    md_dex_stats: md_dex_stats

    ScreenManager:
        id: manager
        transition: NoTransition()
        Screen:
            name: 'md_main_dex'
            on_pre_enter:
                # Go to position in ScrollView where user entered
                app.root.dex_list_scroller.scroll_y = app.root.dex_list_scroller.previous_y

            # Dex_list main container
            BoxLayout:
                orientation: 'vertical'

                # Top / Button nav buttons and searchbar
                BoxLayout:
                    size_hint_y: 0.075
                    orientation: 'vertical'

                    # Top / Bottom Buttons
                    BoxLayout:
                        orientation: 'horizontal'
                        Button:
                            text: 'Top'
                            on_press:
                                app.root.dex_list_scroller.scroll_y = 1
                        Button:
                            text: 'Bottom'
                            on_press:
                                app.root.dex_list_scroller.scroll_y = 0

                    # Search Bar
                    TextInput:
                        id: dex_searchbar
                        hint_text:'Enter Pokedex Nr / Pokemon Name'
                        multiline: False

                        on_text_validate:
                            app.root.dex_search(self.text)
                            #app.root.open

                # The dex list scrolling widget
                ScrollView:
                    id: dex_list_scroller
                    size_hint_y: 0.73
                    previous_y: 1  # scrollbar position
                    scroll_type: ['bars', 'content']
                    bar_width : '10dp'
                    bar_color: 0.4, 0.7, 0.4, 1.0
                    bar_inactive_color: 0.4, 0.7, 0.4, 0.4

                    GridLayout:
                        id: md_dex_grid
                        cols: 1
                        orientation: 'vertical'
                        size_hint_y: None
                        size: root.width, self.minimum_height
                        row_default_height: '85dp'
                        spacing: 10   # between elements - 1720/0 1910/10 2100/20
                        padding: 10  # around elements

                MD_MainBotNav:


        Screen:
            id: dex_page_main
            name: 'dex_page_main'
            number:

            on_pre_enter:

                general_nr_name.text = str(app.root.read_csv(self.number, 2)) + ' ' + str(app.root.read_csv(self.number, 3))
                app.root.check_joined(general_nr_name.text[1:4]) # Set image to joined if pokemon is joined
                general_image.source = 'img\\portraits\\'+general_nr_name.text[1:4]+'.png'  # General Image
                app.root.set_types(general_nr_name.text[1:4])                               # Type 1 (/ Type 2)
                md_joined.source = app.root.check_joined(general_nr_name.text[1:4])         # Joined
                general_class.text = app.root.read_csv(self.number, 9)                      # Classification
                general_weight.text = str(app.root.read_csv(self.number, 10) + ' - ' + app.root.read_csv(self.number, 11))  # Weight
                general_height.text = str(app.root.read_csv(self.number, 12) + ' - ' + app.root.read_csv(self.number, 13))  # Height
                app.root.set_stats(general_nr_name.text[1:4])                               # Base Stats
                app.root.set_abilities(app.root.read_csv(self.number, 14))                  # Abilities
                app.root.set_evos(general_nr_name.text[1:4])                                # Evolution Chain
                md_body_size.source = app.root.set_md_body_size(general_nr_name.text[1:4])  # Body size
                md_friend_area.text = app.root.read_csv(self.number, 17)                    # MD Friend Area
                md_get_rate.text = app.root.read_csv(self.number, 18)                       # MD Get rate
                md_get_rate2.text = app.root.read_csv(self.number, 36) [1:-1]               # MD Get rate min levels
                app.root.set_gummis(general_nr_name.text[1:4])                              # Set favourite gummis
                md_location.text = app.root.set_location(general_nr_name.text[1:4])         # MD Location

                app.root.set_moves(general_nr_name.text[1:4])

            on_enter:
                app.root.unown_check(general_nr_name.text[1:4])                             # Check if Unown (Change font size for get rate, it has 2)

            ScrollView:
                size_hint_y: 0.95
                pos_hint: {"y":0.05}
                GridLayout:
                    cols: 1
                    orientation: 'vertical'
                    size_hint_y: None
                    size: root.width, self.minimum_height
                    row_default_height: '40dp'
                    spacing: 10
                    padding: 0
                    Button:
                        text: 'Back'
                        size_hint_y: 0.1
                        on_press:
                            manager.current = 'md_main_dex'

                    # ======================================== #
                    # GENERAL INFO                             #
                    # ======================================== #
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        size: root.width, self.minimum_height

                        canvas:
                            Color:
                                rgba: 0.4, 0.6, 0.4, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Separator_x:

                        BoxLayout:
                            size_hint: None, None
                            size: root.width, dp(55)

                            TintedLabel:
                                id: general_label
                                size_hint: None, None
                                size: root.width, self.parent.height
                                text: 'General Info'
                                color: 1, 1, 1, 1
                                font_size: '16sp'

                        BoxLayout:
                            size_hint: None, None
                            size: root.width, dp(60)
                            orientation: 'horizontal'
                            Image:
                                id: general_image
                                size: root.width*0.25, self.parent.height
                                # allow_stretch: 'True'
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size: root.width*0.5, self.parent.height
                                Label:
                                    id: general_nr_name
                                    size_hint: None, None
                                    size: self.parent.width, self.parent.height*0.5
                                    text_size: self.size
                                    halign: 'center'
                                    valign: 'bottom'
                                    font_size: '16sp'
                                Label:
                                    id: general_class
                                    size_hint: None, None
                                    size: self.parent.width, self.parent.height*0.5
                                    text_size: self.size
                                    halign: 'center'
                                    valign: 'center'
                                    font_size: '12sp'
                            # Type 1 & Type 2
                            # Double BoxLayout to enable 'center_y' in the inner Box, as the outer is horizontally oriented
                            BoxLayout:
                                orientation: 'horizontal'
                                BoxLayout:
                                    id: type_box
                                    size_hint: None, None
                                    size: root.width*0.25, self.parent.height*0.65
                                    orientation: 'vertical'
                                    pos_hint: {'center_y': 0.5}

                                    BackgroundLabel:
                                        id: general_type1
                                        size_hint: None, None
                                        size: self.parent.width-5, self.parent.height/2
                                    BackgroundLabel:
                                        id: general_type2
                                        size_hint: None, None
                                        size: self.parent.width-5, self.parent.height/2

                        Separator_x:

                        BoxLayout:
                            size_hint: None, None
                            size: root.width, dp(24)
                            Label:
                                text: 'Height'
                                font_size: '12sp'
                            Separator_y:
                            Label:
                                text: 'Weight'
                                font_size: '12sp'

                        # Height & Weight
                        BoxLayout:
                            size_hint: None, None
                            size: root.width, dp(18)
                            Label:
                                id: general_height
                                font_size: '12sp'
                                text_size: self.size
                                halign: 'center'
                                valign: 'top'
                            Separator_y:
                            Label:
                                id: general_weight
                                font_size: '12sp'
                                text_size: self.size
                                halign: 'center'
                                valign: 'top'

                        Separator_x:

                        BoxLayout:
                            size_hint: (None, None)
                            size: root.width, dp(36)

                            TintedLabel:
                                text: 'Base Stats'
                                font_size: '12sp'

                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: (None, None)
                            size: root.width, dp(24)
                            Label:
                                text:'HP'
                                font_size: '12sp'
                            Label:
                                text:'Att'
                                font_size: '12sp'
                            Label:
                                text:'Def'
                                font_size: '12sp'
                            Label:
                                text:'SpA'
                                font_size: '12sp'
                            Label:
                                text:'SpD'
                                font_size: '12sp'
                            Label:
                                text:'Exp'
                                font_size: '12sp'

                        BoxLayout:
                            id: dex_base_stats
                            orientation: 'horizontal'
                            size_hint: (None, None)
                            size: root.width, dp(24)

                        Separator_x:

                    # ======================================== #
                    # MYSTERY DUNGEON INFO                     #
                    # ======================================== #
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        size: root.width, self.minimum_height
                        canvas:
                            Color:
                                rgba: 0.4, 0.4, 0.6, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Separator_x:

                        # Top Label
                        TintedLabel:
                            size_hint: None, None
                            size: root.width, '55dp'
                            text: 'Mystery Dungeon Info'
                            color: 1, 1, 1, 1
                            font_size: '16sp'

                        # Body Size, Recruit Rate, and Gummi Labels
                        BoxLayout:
                            size_hint: None, None
                            size: root.width, '36dp'
                            Label:
                                text:'Body Size'
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                font_size: '12sp'
                            Separator_y:
                            Label:
                                text:'Recruit\nRate'
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                font_size: '12sp'
                            Separator_y:
                            Label:
                                text:'Joined\nTeam'
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                font_size: '12sp'
                            Separator_y:
                            Label:
                                text:'Favourite\nGummis'
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                font_size: '12sp'

                        Separator_x:

                        # Body Size, Recruit Rate, Joined and Gummis
                        BoxLayout:
                            size_hint: None, None
                            size: root.width, '45dp'
                            Image:
                                id: md_body_size
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                            Separator_y:
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                Label:
                                    id: md_get_rate
                                Separator_x:
                                Button:
                                    id: md_get_rate2
                                    font_size: '12sp'
                                    background_color: 0, 0, 0, 0
                                    on_release:
                                        app.root.popup('Minimum Recruit Levels', ('Minimum Level without Friend Bow: ' + app.root.read_csv(dex_page_main.number, 36)[1:].partition('/')[0] + '\nMinimum Level with Friend Bow: ' + app.root.read_csv(dex_page_main.number, 36)[1:].partition('/')[2][:-1]), '12sp')
                            Separator_y:
                            ImageButton:
                                id: md_joined
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                #allow_stretch: True
                                on_release:
                                    app.root.md_join(general_nr_name.text[1:4])
                            Separator_y:
                            BoxLayout:
                                id: md_gummis_box
                                size_hint: None, None
                                size: self.parent.width/4, self.parent.height
                                orientation: 'vertical'

                        Separator_x:

                        TintedLabel:
                            text: 'Friend Area'
                            size_hint: None, None
                            size: root.width, '36dp'
                            font_size: '12sp'

                        Separator_x:

                        Button:
                            id: md_friend_area
                            size_hint: None, None
                            size: root.width, '30dp'
                            font_size: '14sp'
                            background_normal: 'img\\friend areas\\' + md_friend_area.text +'.png'
                            on_release:
                                app.root.popup('image_' + self.background_normal.partition('areas\\')[2].partition('.png')[0], self.background_normal)

                        Separator_x:

                        TintedLabel:
                            text: 'Ability'
                            size_hint: None, None
                            size: root.width, '36dp'
                            font_size: '12sp'

                        BoxLayout:
                            id: md_abilities
                            orientation: 'horizontal'
                            size_hint: None, None
                            size: root.width, '24dp'
                            Button:
                                id: md_ability1
                                font_size: '14sp'
                                background_color: 0, 0, 0, 0

                            Separator_y:
                                id: md_ability_sep
                            Button:
                                id: md_ability2
                                font_size: '14sp'
                                background_color: 0, 0, 0, 0

                        Separator_x:

                        TintedLabel:
                            text: 'Location'
                            size_hint: None, None
                            size: root.width, '36dp'
                            font_size: '12sp'

                        BoxLayout:
                            id: md_location
                            orientation: 'vertical'
                            size_hint: None, None
                            size: root.width, self.minimum_height

                        TintedLabel:
                            text: 'Evolution Chain'
                            size_hint: None, None
                            size: root.width, '36dp'
                            font_size: '12sp'

                        GridLayout:
                            id: md_evo_box
                            size_hint: None, None
                            size: root.width, self.minimum_height


            MD_DexBotNav:

        # ============ #
        # Moves Screen #
        # ============ #
        Screen:
            name: 'dex_page_moves'
            ScrollView:
                size_hint_y: 0.95
                pos_hint: {"y":0.05}
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    size: root.width, self.minimum_height
                    row_default_height: '40dp'
                    spacing: 10
                    padding: 0
                    Button:
                        text: 'Back'
                        size_hint_y: 0.05
                        on_press:
                            manager.current = 'md_main_dex'


                    # ============================= #
                    # MD MOVESET                    #
                    # ============================= #
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: None, None
                        size: root.width, self.minimum_height

                        canvas:
                            Color:
                                rgba: 0.7, 0.4, 0.5, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Separator_x:

                        TintedLabel:
                            size_hint: None, None
                            size: self.parent.width, '55dp'
                            text: 'Moves Learned'
                            color: 1, 1, 1, 1

                        BoxLayout:
                            size_hint: None, None
                            size: self.parent.width, self.minimum_height
                            orientation: 'horizontal'
                            # Moves
                            BoxLayout:
                                id: md_moves_levels
                                size_hint: None, None
                                size: self.parent.width/2-dp(1), self.minimum_height
                                orientation: 'vertical'
                            BoxLayout:
                                id: md_moves_separators
                                orientation: 'vertical'
                            # Levels
                            BoxLayout:
                                id: md_moves_names
                                size_hint: None, None
                                size: self.parent.width/2-dp(1), self.minimum_height
                                orientation: 'vertical'

                    # ============================= #
                    # MD TM/HM/DM                   #
                    # ============================= #
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: None, None
                        size: root.width, self.minimum_height

                        canvas:
                            Color:
                                rgba: 0.4, 0.7, 0.5, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Separator_x:

                        TintedLabel:
                            size_hint: None, None
                            size: self.parent.width, '55dp'
                            text: 'TMs/HMs'
                            color: 1, 1, 1, 1

                        BoxLayout:
                            size_hint: None, None
                            size: self.parent.width, self.minimum_height
                            orientation: 'horizontal'
                            # Moves
                            BoxLayout:
                                id: md_tm_nrs
                                size_hint: None, None
                                size: self.parent.width/2, self.minimum_height
                                orientation: 'vertical'
                            BoxLayout:
                                id: md_tm_separators
                                orientation: 'vertical'
                            # Levels
                            BoxLayout:
                                id: md_tm_names
                                size_hint: None, None
                                size: self.parent.width/2, self.minimum_height
                                orientation: 'vertical'

            MD_DexBotNav:

        # Dex Stats
        Screen:
            name: 'dex_page_stats'
            on_pre_enter:
                app.root.create_box(general_nr_name.text[1:4], 35, ',  ', md_dex_stats, 7, 12, '14sp', [self.parent.width/8, self.parent.width/8, self.parent.width/8, self.parent.width/8, self.parent.width/8 ,self.parent.width/8, self.parent.width/4])

            ScrollView:
                size_hint_y: 0.95
                pos_hint: {"y":0.05}
                GridLayout:
                    cols: 1
                    size_hint_y: None
                    size: root.width, self.minimum_height
                    row_default_height: '40dp'
                    spacing: 10
                    padding: 0
                    Button:
                        text: 'Back'
                        size_hint_y: 0.1
                        on_press:
                            manager.current = 'md_main_dex'

                    # ======================================== #
                    # STAT GROWTH                              #
                    # ======================================== #
                    GridLayout:
                        cols: 1
                        size_hint: None, None
                        size: root.width, self.minimum_height

                        canvas:
                            Color:
                                rgba: 0.4, 0.6, 0.4, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos

                        Separator_x:

                        BoxLayout:
                            size_hint: None, None
                            size: root.width, dp(55)

                            TintedLabel:
                                text: 'Stat Growth'
                                size_hint: None, None
                                size: root.width, self.parent.height
                                text: 'Stat Growth'
                                color: 1, 1, 1, 1
                                font_size: '16sp'

                        GridLayout:
                            id: md_dex_stats
                            cols: 1
                            size_hint: None, None
                            size: root.width, self.minimum_height

                            canvas:
                                Color:
                                    rgba: 0.4, 0.6, 0.4, 1
                                Rectangle:
                                    size: self.size
                                    pos: self.pos



            MD_DexBotNav:

        # ================================================================================================== #
        # This entire section is a clanky hardcoded mess, but I cba to implement it more elegantly right now #
        #                                                                                                    #
        # ======================================== # ======================================================= #
        # QUOTES                                   #
        # ======================================== #
        Screen:
            name: 'dex_page_quotes'
            on_pre_enter:
                lbl_100.text = app.root.read_csv(dex_page_main.number, 38).partition('Normal: ')[2].partition('/_/')[0]
                lbl_50.text = app.root.read_csv(dex_page_main.number, 38).partition('50% HP: ')[2].partition('/_/')[0]
